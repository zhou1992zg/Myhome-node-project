<% include ./header%>
  <!-- 网站介绍开始 -->
  <div id="headerwrap">
    <header class="clearfix">
      <h1><span>Hello ! </span> I'm king of the world!</h1>
      <h1>life was like a box a chocolates, never know what you're gonna get.</h1>
      <h1>I'm going to make him an offer he can't refuse.</h1>
    </header>
  </div>
  <!-- 网站介绍结束 -->
  <div class="scrollblock">
    <section id="feature">
      <div class="container">
        <div class="row">
          <div class="span12">
            <article>
              <p>Keep your friends close,but your enemies closer.</p>
              <p>I'll be back.</p>
              <p>I want to be alone.</p>
            </article>
          </div>
          <!-- ./span12 -->
        </div>
        <!-- .row -->
      </div>
      <!-- ./container -->
    </section>
  </div>
  <!--******************** 内容部分 ********************-->
  <% datalist.forEach(function(val){ %>
    <section id="portfolio" class="single-page scrollblock border-show">
        <div class="container">
            <div class="align">
              <i class="icon-desktop-circled"></i>
            </div>
            <h1 id="folio-headline"><<<<<%= val.name%>>>>></h1>
            <div class="row">
            <% val.articleList.forEach(function(val1){ %>
            
              <div class="span2">
                <div class="mask2">
                  <a href="<%=val1.imgurl%>" rel="prettyPhoto">
                    <img src="<%=val1.imgurl%>" alt="" style="width:170px;height:240px;">
                  </a>
                </div>
                <div class="inside">
                  <a href="/usershow/<%=val1._id%>" id="change_display">
                  <hgroup>
                    <h2><%=val1.title%></h2>
                  </hgroup>
                  <div class="entry-content">
                    <div class="jianjie">
                      <p><%- val1.content%></p>
                    </div>
                    <a class="more-link" href="#"><%=val1.ctime.toLocaleString()%></a>
                  </div>
                </a>
                </div>
                <!-- /.inside -->
              </div>
            <% })%>
          </div>
        </div>
        <!-- /.container -->
      </section>
  <% })%>
    <!--******************** Team Section ********************-->
    <section id="team" class="single-page scrollblock">
        <div class="container">
          <div class="align"><i class="icon-group-circled"></i></div>
          <h1><<<<友情链接>>>></h1>
          <!-- Five columns -->
          <div class="row">
            <% linklist.forEach(function(val){ %>
            <a href="<%=val.linkadd%>">
            <div class="span1 offset1">
              <div class="teamalign"> <img class="team-thumb img-circle" src="<%=val.linkimgurl%>" alt=""> </div>
              <h3 class="change_index_link_h3"><%= val.linkname%></h3>
              <div class="job-position"></div>
            </div>
            </a>
            <% })%>
            <!-- ./span2 -->
          </div>
          <!-- /.row -->
          <div class="row">
            <div class="span10 offset1">
              <hr class="featurette-divider">
              <div class="featurette">
                <h2 class="featurette-heading">以上友情链接 <span class="muted">| 点击了解跟多..</span></h2>
                <p></p>
              </div>
              <!-- /.featurette -->
              <hr class="featurette-divider">
            </div>
            <!-- .span10 -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container -->
      </section>
  <% include ./footer%>