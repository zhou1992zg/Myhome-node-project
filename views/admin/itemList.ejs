<% include ./header %>
    <!-- 路径导航 -->
    <ol class="breadcrumb">
        <li>
            <a href="#">栏目管理</a>
        </li>
        <li class="active">添加列表</li>
    </ol>
    <!-- 路径导航 END -->
    <table class="table table-hover">
        <tr>
            <td>排序</td>
            <td>栏目名称</td>
            <td>栏目介绍</td>
            <td>创建时间</td>
            <td>操作</td>
        </tr>
        <% datalist.forEach(function(val){ %>
            <tr>
                <td><%=val.order%></td>
                <td><%=val.name%></td>
                <td><%=val.description%></td>
                <td><%=val.ctime.toLocaleString()   %></td>
                <td>
                    <a href="/admin/itemEdit/<%=val._id%>">编辑</a>
                    |
                    <a href="/admin/itemRemove/<%=val._id%>" onclick="return confirm('您确定要删除吗？')">删除</a>
                </td>
            </tr>
        <% })%>
    </table>
<% include ./footer %>
