<% include ./header %>
    <!-- 路径导航 -->
    <ol class="breadcrumb">
        <li>
            <a href="#">文章管理</a>
        </li>
        <li class="active">友情链接列表</li>
    </ol>
    <!-- 路径导航 END -->
  


    <table class="table table-hover articleList">
        <tr>
            <td>友链logo</td>
            <td>友链名称</td>
            <td>友链地址</td>
            <td>友链描述</td>
            <td>添加时间</td>
            <td>操作</td>
        </tr>
        <% articlelist.forEach(function(val){ %>
            <tr>
                <td>
                    <img src="/<%=val.linkimgurl%>" alt="">
                </td>
                <td>
                    <%=val.linkname%>
                </td>
                <td>
                    <%=val.linkadd%>
                </td>
                <td>
                    <%=val.description %>
                </td>
                <td>
                    <%=val.ctime.toLocaleString() %>
                </td>
                <td>
                    <a href="/admin/linkEdit/<%=val._id%>">编辑</a>
                    |
                    <a href="/admin/linkRemove/<%=val._id%>" onclick="return confirm('您确定要删除吗？')">删除</a>
                </td>
            </tr>
            <% })%>
    </table>


    <!-- 分页 -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/admin/linkList">首页</a>
            </li>
            <li>
                <a href="/admin/linkList?page=<%=page-1%>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <% for(var i=1;i<= maxPage; i++){ %>
                <li>
                    <a href="/admin/linkList?page=<%=i%>"><%=i%></a>
                </li>
            <% } %>

            <li>
                <a href="/admin/linkList?page=<%=page+1%>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <li>
                <a href="/admin/linkList?page=<%=maxPage%>">尾页</a>
            </li>
        </ul>
    </nav>
    <!-- 分页 end -->

    <% include ./footer %>